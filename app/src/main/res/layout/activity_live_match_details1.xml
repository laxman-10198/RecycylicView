<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainActivity"
    tools:context=".LiveMatchDetails1">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live_toolBar1"
        android:background="@color/colorToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_marginTop="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_selected" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_height="wrap_content"
                android:src="@drawable/application_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/five"
                android:text="CSK vs KXIP"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_below="@+id/live_toolBar1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:text="IPL 2019 - Match 23 (CSK vs KX1P)"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_place_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five"
                    android:text="Chinnaswamy Stadium, Chennai, India"
                    android:textSize="15sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:padding="10dp"
                android:layout_margin="@dimen/five"
                android:background="@drawable/background_bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Who will win?"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:elevation="1dp"
                        android:background="@drawable/blue_button"
                        android:layout_margin="@dimen/five"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/csk"
                            android:padding="@dimen/five"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chennai Super Kings"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/receiver_back"
                        android:padding="5dp"
                        android:text="60%"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/five"
                        android:elevation="1dp"
                        android:background="@drawable/background_bottom"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/kx"
                            android:padding="@dimen/five"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kings X1 Punjab"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:text="40%"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/button_red"
                        android:textSize="16dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:padding="2dp"
                    android:drawableTop="@drawable/ic_done_black_24dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/receiver_back"
                    android:text="Interested"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:elevation="3dp"
                    android:background="@drawable/button_recever"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="4.5k"
                            android:textColor="#2376BB"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="Fans interested to go"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Going"
                    android:drawableTint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_red"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_gravity="center_vertical"
                    android:textSize="10sp"
                    android:drawableTop="@drawable/ic_event_seat_24px"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:elevation="1dp"
                    android:background="@drawable/button_recever"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:baselineAligned="false"
                            android:text="1.2k"
                            android:textColor="#2376BB"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="Fans who purchased tickets"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:background="@drawable/fan_button"
                android:layout_margin="10dp">


                <ImageView
                    android:id="@+id/child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/user"/>

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share your match moment…"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/child"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_24px"/>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:elevation="2dp"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/shap_livechat_tencorner"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/csk_livefanchatbox"
            android:background="@drawable/botton_livefanchat">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live fan chat"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:padding="@dimen/five"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/ten"
                android:src="@drawable/ic_aspect_ratio_24px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:id="@+id/user1"
            android:background="@drawable/button_palegray"
            android:layout_below="@+id/csk_livefanchatbox">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nikhil Aneja"
                android:textStyle="bold"
                android:textColor="#2D76B9"
                android:id="@+id/csk_liveText2"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/border"
                android:src="@drawable/ic_done_black_24dp"
                android:id="@+id/csk_liveImage2"
                android:layout_toRightOf="@+id/csk_liveText2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/csk_liveImage2"
                android:text="now"
                android:layout_marginRight="@dimen/five"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/csk_liveText2"
                android:textSize="10sp"
                android:paddingBottom="@dimen/five"
                android:text="Cool. I’ll be joining too. Lets catchup."/>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:id="@+id/user2"

            android:background="@drawable/button_palegray"
            android:layout_below="@+id/user1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nikhil Aneja"
                android:textStyle="bold"
                android:textColor="#2D76B9"
                android:id="@+id/csk_liveText1"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/border"
                android:src="@drawable/ic_done_black_24dp"
                android:id="@+id/csk_liveImage1"
                android:layout_toRightOf="@+id/csk_liveText1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/csk_liveImage1"
                android:text="now"
                android:layout_marginRight="@dimen/five"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/csk_liveText1"
                android:textSize="10sp"
                android:paddingBottom="@dimen/five"
                android:text="Cool. I’ll be joining too. Lets catchup."/>



        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write comment"
            android:layout_alignParentBottom="true"
            android:elevation="1dp"
             android:padding="@dimen/five"
            android:layout_margin="@dimen/five"
            android:layout_toLeftOf="@+id/live_send"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/shape_livechat"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_24px"
            android:layout_alignParentBottom="true"
            android:id="@+id/live_send"
            android:layout_margin="@dimen/five"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>


</RelativeLayout>