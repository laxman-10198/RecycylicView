<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpSlide"
    android:background="@color/colorMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar"
        android:background="@color/colorToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrow_icon"
                android:layout_marginTop="@dimen/ten"
                android:src="@drawable/chevron_selected"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:layout_marginLeft="@dimen/twenty"
                android:src="@drawable/application_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:paddingLeft="25dp"
                android:text="@string/createFanProfile"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/massagetext_size"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:id="@+id/relativeLayout11"
        android:layout_below="@+id/toolBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/ten"
                android:text="Otp has been send to"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#2376BB"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/ten"
                android:text="laxmankumar10198@gmail.com"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1"
            android:layout_marginTop="@dimen/twenty"
            android:gravity="center">
            <EditText
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/ten"
                android:inputType="number"
                android:id="@+id/edit_otp1"
                android:background="@drawable/button_recever"/>
            <EditText
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:id="@+id/edit_otp2"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_marginRight="@dimen/ten"
                android:background="@drawable/button_recever"/>
            <EditText
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:id="@+id/edit_otp3"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_marginRight="@dimen/ten"
                android:background="@drawable/button_recever"/>
            <EditText
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:id="@+id/edit_otp4"
                android:inputType="number"
                android:textAlignment="center"
                android:background="@drawable/button_recever"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/twenty"
            android:layout_below="@+id/linearLayout1">
            <Button
                android:layout_width="120dp"
                android:layout_height="@dimen/fifty"
                android:text="Verify"
                android:background="@drawable/button_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resend in 32s"
                android:textSize="18sp"
                android:textColor="#2D76B9"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_marginRight="@dimen/twenty"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_below="@+id/relativeLayout11">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#707070"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="#2D76B9"
            android:text="GREAT!! Youâ€™re a genuine Fan!"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/button_recever">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/ten"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Please choose password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:id="@+id/fan_editText3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:id="@+id/fab"
            android:background="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-type password"
            android:background="@null"
            android:inputType="textPassword"
            android:id="@+id/fan_editText4"
            android:layout_marginTop="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/linearLayout3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's Go"
            android:textColor="@color/colorlightWhite"
            android:background="@drawable/receiver_back"/>
    </RelativeLayout>
</RelativeLayout>