<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/upc_datalist"
    android:layout_margin="@dimen/five"
    android:elevation="1dp"
    android:visibility="visible"
    android:background="@drawable/button_recever">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPL 2019-Match 23"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/upc_text1"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/ten"
                android:textColor="#1476BD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#BB2323"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/five"
                android:layout_toRightOf="@+id/upc_text1"
                android:text="Chinnaswamy Stadium, Chennaiâ€¦"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upc_text1"
                android:textSize="12sp"
                android:layout_margin="@dimen/ten"
                android:text="Scheduled to begin at 14:30 local time (+5:30 GST)"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0.5dp"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/upc_button">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/csk"
                android:layout_marginTop="@dimen/ten"
                android:id="@+id/upc_image1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upc_text2"
                android:text="CSk"
                android:layout_marginBottom="@dimen/ten"
                android:textAlignment="center"
                android:layout_below="@+id/upc_image1"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vs"
                android:textSize="16sp"
                android:textColor="#1476BD"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kx"
                android:layout_marginTop="@dimen/ten"
                android:id="@+id/upc_image2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upc_text3"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/ten"
                android:layout_below="@id/upc_image2"
                android:text="KXIP" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/ten">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upc_image3"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/five"
                android:src="@drawable/ic_people_24px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/upc_image3"
                android:text="4.5k interested"
                android:textSize="14sp"
                android:id="@+id/upc_text4"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginTop="@dimen/ten"
                android:textColor="#2376BB" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:hint="I am interested to go"
                android:elevation=".05dp"
                android:textSize="12sp"
                android:drawablePadding="@dimen/five"
                android:padding="@dimen/ten"
                android:textColorHint="@color/colorWhite"
                android:background="@drawable/upc_button1"
                android:drawableLeft="@drawable/ic_done_black_24dp"
                android:layout_marginRight="@dimen/ten"/>
            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>
   
</RelativeLayout>