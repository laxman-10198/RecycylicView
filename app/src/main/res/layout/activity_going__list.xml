<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Going_List"
    android:orientation="vertical"
    android:background="@color/colorMainActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar1"
        android:background="@color/colorToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_marginTop="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_selected" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_height="wrap_content"
                android:src="@drawable/application_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:text="IPL 2019 - Match 23 (CSK vs KX1P)"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/ten">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/twenty"
            android:text="Showing 20 from 4123"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fan_button"
            android:hint="Search.."
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/twenty"
            android:paddingLeft="@dimen/twenty"
            android:paddingTop="@dimen/five"
            android:paddingBottom="@dimen/five"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:padding="@dimen/five"
        android:layout_marginTop="@dimen/five"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ten"
            android:text="DLF Center Mall, Shalimar Bagh, New Delhi"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_toLeftOf="@+id/ic_menu"
            android:layout_marginRight="@dimen/ten"
            android:tint="#2376BB" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:layout_marginRight="@dimen/twenty"
            android:layout_alignParentRight="true"
            android:id="@+id/ic_menu"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fan_button"
        android:layout_margin="@dimen/five">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pic"
            android:layout_margin="@dimen/ten"
            android:id="@+id/ipl_pic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ipl_linearlayout"
            android:layout_marginLeft="@dimen/five"
            android:layout_toRightOf="@+id/ipl_pic">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:text="Nikhil Ajena"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginTop="@dimen/five"
                android:drawableLeft="@drawable/heart"
                android:drawableTint="#E06363"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#60;300"/>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="317"
            android:textStyle="bold"
            android:drawablePadding="@dimen/five"
            android:textColor="#2376BB"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_below="@+id/ipl_linearlayout"
            android:drawableLeft="@drawable/ic_event_seat_24px"
            android:drawableTint="#2376BB"
            android:layout_marginBottom="@dimen/five"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="West Category 31"
            android:layout_marginRight="@dimen/twenty"
            android:layout_below="@+id/ipl_linearlayout"
            android:drawableTint="#2376BB"
            android:layout_marginBottom="@dimen/five"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Category 31"
            android:layout_below="@+id/ipl_linearlayout"
            android:drawableTint="#2376BB"
            android:layout_marginBottom="@dimen/five"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:drawableLeft="@drawable/ic_add_24px"
            android:drawableTint="@color/colorWhite"
            android:hint="Follow"
            android:paddingLeft="@dimen/twenty"
            android:textColorHint="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:background="@drawable/receiver_back"/>




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fan_button"
        android:layout_margin="@dimen/five">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sheetal_pic"
            android:layout_margin="@dimen/ten"
            android:id="@+id/ipl_pic1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ipl_linearlayout1"
            android:layout_marginLeft="@dimen/five"
            android:layout_toRightOf="@+id/ipl_pic1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:text="Nikhil Ajena"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:drawablePadding="00dp"
                android:layout_marginTop="@dimen/five"
                android:drawableLeft="@drawable/heart"
                android:drawableTint="#E06363"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#60;300"/>



        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:drawableLeft="@drawable/ic_add_24px"
            android:drawableTint="@color/colorWhite"
            android:hint="Follow"
            android:textColorHint="@color/colorWhite"
            android:paddingLeft="@dimen/twenty"
            android:layout_alignParentRight="true"
            android:background="@drawable/receiver_back"/>




    </RelativeLayout>

</LinearLayout>