<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorMainActivity"
    tools:context=".LivematchDetails">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/csk_toolBar1"
        android:background="@color/colorToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_marginTop="@dimen/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_selected" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_height="wrap_content"
                android:src="@drawable/application_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/five"
                android:text="CSK vs KXIP"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/ten"
        android:layout_below="@+id/csk_toolBar1"
        android:id="@+id/csk_linearLayout1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="IPL 2019 - Match 23 (CSK vs KX1P)"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:text="Chinnaswamy Stadium, Chennai, India"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/csk_linearLayout2"
        android:layout_below="@+id/csk_linearLayout1"
        android:layout_margin="@dimen/ten">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="@drawable/button_recever">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPL 2019-Match 23"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/upc_text1"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/ten"
                android:textColor="#1476BD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:text="Mohali Stadium, Punjab"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/twenty">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/live_relativeLayout2"
                    android:layout_marginTop="@dimen/ten">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:src="@drawable/csk"
                        android:id="@+id/live_image1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/live_text2"
                        android:text="CSk"
                        android:textAlignment="center"
                        android:layout_below="@+id/live_image1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/live_relativeLayout2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/live_scor1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:text="178/5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/live_scor1"
                        android:text="20ov"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vs"
                android:textSize="16sp"
                android:textColor="#1476BD"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/twenty"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five"
                    android:layout_toLeftOf="@+id/live_relativeLayout1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="002"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/live_scor2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/live_over1"
                        android:textSize="12sp"
                        android:layout_below="@+id/live_scor2"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="50.66over"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/ten"
                    android:id="@+id/live_relativeLayout1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:src="@drawable/kx"
                        android:id="@+id/live_image2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/live_text3"
                        android:textAlignment="center"
                        android:layout_below="@id/live_image2"
                        android:text="KXIP" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#BABABA"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KX1P requires 29 to win from 33 balls"
            android:textColor="#1476BD"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/five"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maxwell 30*(17)"
                android:textSize="12sp"
                android:id="@+id/live_player"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marsh 5(4)"
                android:layout_marginLeft="@dimen/ten"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/live_player"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="Bravo 24/2(2.3)"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#BABABA"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/five"
            android:layout_marginRight="@dimen/twenty"/>


    </LinearLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="@drawable/button_recever"
            android:layout_marginTop="@dimen/five">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who will win."
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="@dimen/ten"
            android:id="@+id/csk_text"/>
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Channai Super king"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@drawable/blue_button"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:elevation="1dp"
            android:id="@+id/team1"
            android:layout_below="@+id/csk_text"
            android:padding="@dimen/five"
            android:drawablePadding="@dimen/five"
            android:drawableLeft="@drawable/csk"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="60%"
            android:textColor="@color/colorWhite"
            android:background="@drawable/receiver_back"
            android:layout_marginTop="@dimen/five"
            android:id="@+id/percentage1"
            android:elevation="1dp"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_toRightOf="@+id/team1"
            android:layout_below="@+id/csk_text"
            android:gravity="center"/>



        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="King XI Panjab"
            android:padding="@dimen/five"
            android:drawablePadding="@dimen/five"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:drawableLeft="@drawable/kx"
            android:background="@drawable/button_recever"
            android:elevation="1dp"
            android:id="@+id/team2"
            android:textSize="14sp"
            android:layout_below="@+id/team1"
            android:layout_marginBottom="@dimen/five"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="40%"
            android:gravity="center"
            android:elevation="1dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/five"
            android:layout_below="@+id/team1"
            android:layout_marginLeft="@dimen/twenty"
            android:background="@drawable/button_red"
            android:layout_toRightOf="@+id/team2"
            android:layout_marginBottom="@dimen/five"/>


    </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/five">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/receiver_back"
            android:id="@+id/csk_relativeLay2">

           <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_person_pin_circle_24px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check out"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/five"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/twenty"/>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/csk_relativeLay2"
                android:background="@drawable/button_recever"
                android:layout_marginLeft="@dimen/ten">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5k"
                    android:textStyle="bold"
                    android:textColor="#2376BB"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/twenty"
                    android:drawablePadding="@dimen/five"
                    android:textSize="18sp"
                    android:id="@+id/csk_text3"
                    android:drawableLeft="@drawable/ic_people_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fan in stadium"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/five"
                    android:paddingTop="4dp"
                    android:layout_toRightOf="@id/csk_text3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_24px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty"/>


            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five">
            <RelativeLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/button_red"
                android:id="@+id/csk_relativeLay1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_videocam_24px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Live Tv"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/twenty"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/csk_relativeLay1"
                android:background="@drawable/button_recever"
                android:layout_marginLeft="@dimen/ten">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5k"
                    android:textStyle="bold"
                    android:textColor="#2376BB"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/twenty"
                    android:drawablePadding="@dimen/five"
                    android:textSize="18sp"
                    android:id="@+id/csk_text2"
                    android:drawableLeft="@drawable/ic_people_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fan on Live"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/five"
                    android:paddingTop="4dp"
                    android:layout_toRightOf="@id/csk_text2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_24px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty"/>


            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share your match moment…"
        android:drawableLeft="@drawable/user"
        android:padding="@dimen/five"
        android:textSize="18sp"
        android:drawablePadding="@dimen/five"
        android:layout_below="@+id/csk_linearLayout2"
        android:background="@drawable/fan_button"
        android:layout_margin="@dimen/ten"
        android:drawableRight="@drawable/ic_add_24px"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:elevation="2dp"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/shap_livechat_tencorner"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/csk_livefanchatbox"
            android:background="@drawable/botton_livefanchat">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live fan chat"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:padding="@dimen/five"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/ten"
                android:src="@drawable/ic_aspect_ratio_24px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:id="@+id/rr1"
            android:background="@drawable/button_palegray"
            android:layout_below="@+id/csk_livefanchatbox">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nikhil Aneja"
                android:textStyle="bold"
                android:textColor="#2D76B9"
                android:id="@+id/csk_liveText11"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/border"
                android:src="@drawable/ic_done_black_24dp"
                android:id="@+id/csk_liveImage11"
                android:layout_toRightOf="@+id/csk_liveText11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/csk_liveImage11"
                android:text="now"
                android:layout_marginRight="@dimen/five"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/csk_liveText11"
                android:textSize="10sp"
                android:text="Cool. I’ll be joining too. Lets catchup."/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:background="@drawable/button_palegray"
            android:layout_below="@+id/rr1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shital Arora"
                android:textStyle="bold"
                android:textColor="#2D76B9"
                android:id="@+id/csk_liveText1"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/border"
                android:src="@drawable/ic_done_black_24dp"
                android:id="@+id/csk_liveImage1"
                android:layout_toRightOf="@+id/csk_liveText1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/csk_liveImage1"
                android:text="now"
                android:layout_marginRight="@dimen/five"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/csk_liveText1"
                android:textSize="10sp"
                android:text="Cool. I’ll be joining too. Lets catchup."/>



        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write comment"
            android:layout_alignParentBottom="true"
            android:elevation="1dp"
            android:padding="@dimen/five"
            android:layout_margin="@dimen/five"
            android:layout_toLeftOf="@+id/live_send"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/shape_livechat"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_24px"
            android:layout_alignParentBottom="true"
            android:id="@+id/live_send"
            android:layout_margin="@dimen/five"
            android:layout_alignParentRight="true"/>





    </RelativeLayout>


</RelativeLayout>